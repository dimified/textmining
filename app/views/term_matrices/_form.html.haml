= form_for @term_matrix do |f|
  - if @term_matrix.errors.any?
    #error_explanation
      %h2= "#{pluralize(@term_matrix.errors.count, "error")} prohibited this term_matrix from being saved:"
      %ul
        - @term_matrix.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :term_id
    = f.number_field :term_id
  .field
    = f.label :term
    = f.text_field :term
  .actions
    = f.submit 'Save'
