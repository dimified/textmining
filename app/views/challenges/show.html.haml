%h1= @challenge.title
%h2= "Original Text"
.text
  = @challenge.description
  .count
    = "Number of words: "
    = @challenge.description.count_words
%h2= "Processed text: Stop Words Removal, Lemmatization, POS Tagging, Term Frequency"
.text
  = @challenge.processed_text
  .count
    = "Number of words: "
    = @challenge.processed_text.size
.text
  = link_to "Information about POS Tags", 'http://www.ling.upenn.edu/courses/Fall_2003/ling001/penn_treebank_pos.html'
%h2= "Dictionary of #{@challenge.class}"
.text
  = @dictionary
  .count
    = "Number of words: "
    = @dictionary.size
%h2= "Document Vector of this #{@challenge.class}"
.text
  - @challenge.document_vector(@dictionary).each do |value|
    = "| #{value} "
  = "|"
