= form_for @dummy do |f|
  - if @dummy.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dummy.errors.count, "error")} prohibited this dummy from being saved:"
      %ul
        - @dummy.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :dummy_id
    = f.number_field :dummy_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :document
    = f.text_field :document
  .field
    = f.label :lemma
    = f.text_area :lemma
  .actions
    = f.submit 'Save'
